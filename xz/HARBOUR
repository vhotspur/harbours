shipname=xz
shipversion=5.2.3
shipsources="https://tukaani.org/${shipname}/${shipname}-${shipversion}.tar.gz"
shipfunnels=4

build() {
	run tar xzf "${shipname}-${shipversion}.tar.gz"

	cd "${shipname}-${shipversion}"

	run ./configure \
		--disable-shared \
		--host="$HSCT_GNU_TARGET" \
		CPP="$HSCT_CC -E" \
		CPPFLAGS="$HSCT_CPPFLAGS" \
		CC="$HSCT_CC" \
		CFLAGS="$HSCT_CFLAGS" \
		LD="$HSCT_LD" \
		AR="$HSCT_AR" \
		|| return 1
	
	run make -j$shipfunnels
}

package() {
	cd "${shipname}-${shipversion}"
	run make install DESTDIR=$PWD/PKG
	
	run mkdir -p "$HSCT_MY_DIR/app/"
	for app in xz; do
		run cp PKG/usr/local/bin/$app "$HSCT_MY_DIR/app/"
	done
}

